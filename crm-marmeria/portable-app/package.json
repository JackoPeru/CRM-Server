{
    "name": "crm-marmeria",
    "version": "1.0.0",
    "description": "Sistema CRM professionale per la gestione di marmerie e lavorazioni in pietra",
    "author": "CRM Marmeria Team",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "build:prod": "NODE_ENV=production vite build",
        "build:electron-dev": "cross-env ELECTRON_BUILD=true vite build",
        "electron": "electron .",
        "build:electron": "cross-env ELECTRON_BUILD=true vite build && electron-builder",
        "build:installer": "cross-env ELECTRON_BUILD=true vite build && electron-builder --win --publish=never",
        "build:win": "cross-env ELECTRON_BUILD=true vite build && electron-builder --win",
        "build:mac": "cross-env ELECTRON_BUILD=true vite build && electron-builder --mac",
        "build:linux": "cross-env ELECTRON_BUILD=true vite build && electron-builder --linux"
    },
    "dependencies": {
        "express": "^4.18.2",
        "lucide-react": "^0.322.0",
        "node-fetch": "^3.3.2",
        "react": "^18.3.0",
        "react-dom": "^18.3.0",
        "recharts": "^2.6.2"
    },
    "devDependencies": {
        "@vitejs/plugin-react": "^4.5.1",
        "autoprefixer": "^10.4.17",
        "cross-env": "^7.0.3",
        "electron": "^28.0.0",
        "electron-builder": "^24.13.3",
        "postcss": "^8.4.32",
        "tailwindcss": "^3.4.4",
        "vite": "^6.3.5"
    },
    "main": "electron/main.cjs",
    "build": {
        "appId": "com.crm-marmeria.app",
        "productName": "CRM Marmeria",
        "copyright": "Copyright Â© 2024 CRM Marmeria Team",
        "directories": {
            "output": "releases",
            "buildResources": "build"
        },
        "files": [
            "dist/**/*",
            "electron/main.cjs",
            "electron/preload.cjs",
            "electron/server.cjs",
            "node_modules/**/*",
            "package.json"
        ],
        "extraResources": [
            {
                "from": "electron/server.cjs",
                "to": "server.cjs"
            }
        ],
        "win": {
            "sign": false,
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "portable",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "electron/icon.png",
            "requestedExecutionLevel": "asInvoker",
            "artifactName": "${productName}-Setup-${version}.${ext}"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": false,
            "allowToChangeInstallationDirectory": true,
            "deleteAppDataOnUninstall": false,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "CRM Marmeria",
            "installerIcon": "electron/icon.png",
            "uninstallerIcon": "electron/icon.png",
            "installerHeaderIcon": "electron/icon.png"
        },
        "portable": {
            "artifactName": "${productName}-Portable-${version}.${ext}"
        },
        "mac": {
            "target": "dmg",
            "icon": "electron/icon.png",
            "category": "public.app-category.business"
        },
        "linux": {
            "target": "AppImage",
            "icon": "electron/icon.png",
            "category": "Office"
        }
    }
}
